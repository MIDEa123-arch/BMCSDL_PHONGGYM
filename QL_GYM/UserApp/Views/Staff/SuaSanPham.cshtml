@model UserApp.Models.SANPHAM

@{
    ViewBag.Title = "Cập Nhật Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";


}

<div class="container" style="padding-top: 20px;">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Thành công!</strong> @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Lỗi!</strong> @Html.Raw(TempData["Error"])
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-warning text-white">
            <h5 class="m-0 font-weight-bold"><i class="fa fa-edit"></i> CHỈNH SỬA TÊN VÀ GIÁ: @Model.TENSP</h5>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("SuaSanPham", "Staff", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form-product" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MASP)

                <div class="row">

                    <div class="col-lg-7">
                        <h5 class="text-info border-bottom pb-2">Thông tin được phép thay đổi</h5>

                        <div class="form-group">
                            <label class="font-weight-bold">Tên sản phẩm <span class="text-danger">(*)</span></label>
                            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Đơn giá (VNĐ) <span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", required = "required" } })
                                @Html.ValidationMessageFor(model => model.DONGIA, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-weight-bold">Giá khuyến mãi (VNĐ)</label>
                                @Html.EditorFor(model => model.GIAKHUYENMAI, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.GIAKHUYENMAI, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <h5 class="text-danger border-bottom pb-2 mt-4">Thông tin không được phép sửa</h5>
                        <div class="form-group">
                            <label class="font-weight-bold">Số lượng tồn kho</label>
                            <p class="form-control-static">@Model.SOLUONGTON</p>
                        </div>

                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <hr />
                        <button type="submit" class="btn btn-warning btn-lg px-5">
                            <i class="fa fa-save"></i> Lưu Thay Đổi
                        </button>
                        <a href="@Url.Action("SanPham", "Staff")" class="btn btn-secondary btn-lg px-4 ml-2">
                            <i class="fa fa-arrow-left"></i> Hủy
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>