@{
    ViewBag.Title = "Ký Hóa Đơn";
}

<div class="container" style="margin-top: 30px;">
    <h2>Kết quả Ký Số Hóa Đơn</h2>
    <hr />

    @if (ViewBag.Message != null)
    {
        <div class="alert @(ViewBag.Message.Contains("✅") ? "alert-success" : "alert-danger")">
            @ViewBag.Message
        </div>
    }

    @if (ViewBag.InvoiceContent != null)
    {
        <div class="row">
            <div class="col-md-8">
                <h4>📄 Nội dung Hóa đơn (Mô phỏng bản in):</h4>
                <pre style="background: #fff; border: 1px solid #ccc; padding: 20px; font-family: 'Consolas', monospace; font-size: 14px; box-shadow: 5px 5px 15px rgba(0,0,0,0.1);">
@ViewBag.InvoiceContent
                </pre>
            </div>

            <div class="col-md-4">
                <h4>ℹ️ Thông tin file:</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Tên file gốc:</strong> <br />
                        <span class="text-primary">@ViewBag.FileName</span>
                    </li>
                    <li class="list-group-item">
                        <strong>File chữ ký:</strong> <br />
                        <span class="text-primary">@(ViewBag.FileName).sig</span>
                    </li>
                </ul>
                <br />

                <a href="@Url.Action("Verify", "Invoice", new { file = ViewBag.FileName })" class="btn btn-warning btn-block">
                    🔍 Kiểm tra (Verify) chữ ký file này
                </a>
            </div>
        </div>
    }
</div>